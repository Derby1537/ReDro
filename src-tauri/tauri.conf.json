{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "redro",
    "version": "0.1.0",
    "identifier": "com.redro.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "ReDro",
                "width": 1200,
                "minWidth": 490,
                "height": 900,
                "minHeight": 368,
                "resizable": true
            }
        ],
        "security": {
            "csp": null
        },
        "macOSPrivateApi": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
